
 #include <stdio.h>
 #include <stdlib.h>
 #include <string.h>
 #include <time.h>

		#define simulacoes 100000
		
        int main() {
			srand(time(NULL));
			int N, cont = 0;
			do
			{
				cont = 0;
				// FAZENDO A 100000 SIMULAÇÕES
				printf ("\nDigite um valor para N:\n");
				scanf (" %d", &N);
				
				if (N == 0) break;
				int sorteios[N];
								
				for (int s = 0; s < simulacoes; s++){
					int flag = 1;
					for (int i = 0; i < N; i++){
						sorteios[i]= rand()%((2*N) + 1);
					}
					
					for (int i = 0; i < N; i++){
						for (int j = i - 1; j >= 0; j--){
							if (sorteios[i] == sorteios[j] && j > -1){
								flag = 0;
								break;
							} 
						}	
						if (!flag) 
						{
						cont++;
						break; 
						}
					}
				}
				
				float porc = (((float)simulacoes - cont) * 100) / simulacoes;
				printf("A porcentagem de conjuntos de números não repetitivos foi de : %f%%", porc);	
			} while (1);
			
        return 0;
        }
