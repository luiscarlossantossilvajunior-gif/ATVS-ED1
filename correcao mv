
 #include <stdio.h>
 #include <stdlib.h>
 #include <string.h>
 #include <time.h>

		#define simulacoes 100000
		
        int main() {
			srand(time(NULL));
			int N, cont;
			do
			{
				cont = 0;
				// FAZENDO A 100000 SIMULAÇÕES
				printf ("\nDigite um valor para N:\n");
				scanf (" %d", &N);
				
				if (N == 0) break;
				int sorteios[N];
								
				for (int i = 0; i < simulacoes; i++){
					int flag = 1;
					for (int j = 0; j < N; j++){
						sorteios[j]= rand()%((2*N) + 1);
						for (int k = j - 1; k >= 0; k--){
							if (sorteios[j] == sorteios[k] && k > -1){
								flag = 0;
								break;
							} 
						}	
						if (!flag){
						cont++;
						break; 
						}
					}
				}
				
				float porc = (((float)simulacoes - cont) * 100) / simulacoes;
				printf("A porcentagem de conjuntos de números não repetitivos foi de : %f%%", porc);	
			} while (1);
			
        return 0;
        }
